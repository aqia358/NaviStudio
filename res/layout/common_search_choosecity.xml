<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/relativeLayout1_ref"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/common_menu_header" />

    <RelativeLayout
        android:id="@+id/resultbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relativeLayout1_ref"
        android:orientation="vertical" >

        <ExpandableListView
            android:id="@+id/elv_chooseCity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/lstChooseCity"
            android:layout_alignLeft="@+id/lstChooseCity"
            android:layout_alignRight="@+id/lstChooseCity" 
            >
        </ExpandableListView>
    </RelativeLayout>

</RelativeLayout>