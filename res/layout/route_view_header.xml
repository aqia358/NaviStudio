<?xml version="1.0" encoding="utf-8"?>
    <RelativeLayout 
    	xmlns:android="http://schemas.android.com/apk/res/android" 
    	android:id="@+id/routeviewheader" 
    	android:layout_width="fill_parent" 
    	android:layout_height="wrap_content">
        <TextView 
        	android:text="总距离：" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:id="@+id/route_view_total_distance" 
        	android:textSize="20.0dip"
        	android:textColor="#6B716B"
        	android:layout_alignParentLeft="true"
        	android:layout_marginLeft="5.0dip"
        	android:layout_marginTop="10.0dip"
        	android:layout_marginBottom="10.0dip"
        	>
        </TextView>
        <TextView 
        	android:text="" 
        	android:layout_height="wrap_content" 
        	android:layout_width="wrap_content" 
        	android:id="@+id/route_view_toll_num"
        	android:textSize="20.0dip"
        	android:textColor="#6B716B"
        	android:layout_alignBaseline="@id/route_view_total_distance"
        	android:layout_alignTop="@id/route_view_total_distance"
        	android:layout_alignBottom="@id/route_view_total_distance"
        	android:layout_marginRight="5.0dip"
        	android:layout_alignParentRight="true"
        	>
        </TextView>
    </RelativeLayout>
